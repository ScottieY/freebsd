# VT -- kernel config adding the vt(9) system console to legacy syscons
#                                                                              
# For more information see https://wiki.freebsd.org/Newcons
#
# $FreeBSD$

include		GENERIC
ident		VT

device		vt
device		vt_vga
device		vt_efifb

options TERMINAL_NORM_ATTR=(FG_GREEN|BG_BLACK)
options TERMINAL_KERN_ATTR=(FG_LIGHTRED|BG_BLACK)

